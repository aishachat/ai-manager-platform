                    { id: 'api', name: 'REST API', description: '–ü—Ä–æ–≥—Ä–∞–º–º–Ω—ã–π –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å', color: 'bg-gray-700' },
                    { id: 'webhook', name: 'Webhook', description: '–£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è –≤ —Ä–µ–∞–ª—å–Ω–æ–º –≤—Ä–µ–º–µ–Ω–∏', color: 'bg-red-500' }
