  // Auth screen
  if (!isLoggedIn) {
    // –î–ª—è —Å—Ç—Ä–∞–Ω–∏—Ü—ã –≤—Ö–æ–¥–∞ –∏—Å–ø–æ–ª—å–∑—É–µ–º –Ω–æ–≤—ã–π –¥–∏–∑–∞–π–Ω
    if (currentStep === 'login') {
      return (
        <div className="min-h-screen flex">
